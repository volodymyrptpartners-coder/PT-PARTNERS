

<head>
  <!-- core policy -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- seo -->
  <title>{{ meta.title | default(raise("meta.title is required")) }}</title>
  <meta name="description"
        content="{{ meta.description | default(raise("meta.description is required")) }}">

  <!-- open graph -->
  <meta property="og:type" content="website">
  <meta property="og:title"
        content="{{ meta.og.title | default(raise("meta.og.title is required")) }}">
  <meta property="og:description"
        content="{{ meta.og.description | default(raise("meta.og.description is required")) }}">
  <meta property="og:url"
        content="{{ meta.og.url | default(raise("meta.og.url is required")) }}">
  <meta property="og:locale"
        content="{{ meta.og.locale | default(raise("meta.og.locale is required")) }}">
  <meta property="og:image"
        content="{{ core.og_image | default(raise("core.og_image is required")) }}">

  <!-- twitter -->
  <meta name="twitter:card"
        content="{{ core.twitter_card | default(raise("core.twitter_card is required")) }}">
  <meta name="twitter:title"
        content="{{ meta.twitter.title | default(raise("meta.twitter.title is required")) }}">
  <meta name="twitter:description"
        content="{{ meta.twitter.description | default(raise("meta.twitter.description is required")) }}">

  <!-- styles -->
  {% for css in core.styles | default(raise("core.styles is required and must be array")) %}
    <link rel="stylesheet" href="{{ css }}">
  {% endfor %}

  <!-- icons (core infrastructure, not data) -->
  <link rel="icon" type="image/svg+xml" href="/sources/logo_vector.svg">
  <link rel="icon" type="image/png" sizes="32x32" href="/sources/logo_32x32.png">
  <link rel="icon" type="image/png" sizes="48x48" href="/sources/logo_48x48.png">
  <link rel="icon" type="image/png" sizes="64x64" href="/sources/logo_64x64.png">
  <link rel="icon" type="image/png" sizes="128x128" href="/sources/logo_128x128.png">
  <link rel="icon" type="image/png" sizes="256x256" href="/sources/logo_256x256.png">
  <link rel="icon" type="image/png" sizes="384x384" href="/sources/logo_384x384.png">
  <link rel="icon" type="image/png" sizes="512x512" href="/sources/logo_512x512.png">

  <link rel="apple-touch-icon" sizes="57x57" href="/sources/logo_57x57.png">
  <link rel="apple-touch-icon" sizes="60x60" href="/sources/logo_60x60.png">
  <link rel="apple-touch-icon" sizes="72x72" href="/sources/logo_72x72.png">
  <link rel="apple-touch-icon" sizes="76x76" href="/sources/logo_76x76.png">
  <link rel="apple-touch-icon" sizes="114x114" href="/sources/logo_114x114.png">
  <link rel="apple-touch-icon" sizes="120x120" href="/sources/logo_120x120.png">
  <link rel="apple-touch-icon" sizes="144x144" href="/sources/logo_144x144.png">
  <link rel="apple-touch-icon" sizes="152x152" href="/sources/logo_152x152.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/sources/logo_180x180.png">
</head>

