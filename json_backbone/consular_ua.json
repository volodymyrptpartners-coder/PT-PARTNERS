    "path_way_block": {
      "realization": {
        "block_name": "path_way_block",
        "content": {
          "title": "Етапи оформлення",
          "steps": [
            {
              "step": 1,
              "icon": "●",
              "label": "Звернення",
              "time": "близько 15 хв"
            },
            {
              "step": 2,
              "icon": "▲",
              "label": "Перевірка даних",
              "time": "до 1 дня"
            },
            {
              "step": 3,
              "icon": "■",
              "label": "Оформлення",
              "time": "індивідуально (~10 днів)"
            },
            {
              "step": 4,
              "icon": "★",
              "label": "Результат",
              "time": "після завершення"
            }
          ],
          "details": [
            {
              "step": 1,
              "title": "Звернення та уточнення ситуації",
              "items": [
                "ви залишаєте звернення зручним для вас способом",
                "під час спілкування описуєте свою ситуацію та мету звернення",
                "отримуєте розуміння, чи підходить консульський облік у вашому випадку та що знадобиться далі"
              ]
            },
            {
              "step": 2,
              "title": "Перевірка наданої інформації",
              "items": [
                "ви передаєте наявні документи для ознайомлення",
                "після перевірки стає зрозуміло, чи достатньо поточних документів",
                "за потреби отримуєте перелік того, що потрібно додати або уточнити"
              ]
            },
            {
              "step": 3,
              "title": "Процес оформлення",
              "items": [
                "ви дієте за узгодженим порядком кроків",
                "на кожному етапі зрозуміло, що відбувається і чого очікувати далі",
                "тривалість залежить від індивідуальної ситуації та зовнішніх факторів"
              ]
            },
            {
              "step": 4,
              "title": "Отримання результату",
              "items": [
                "ви отримуєте підтвердження завершення консульського обліку",
                "після цього процес вважається завершеним"
              ]
            }
          ]
        }
      }
    },
