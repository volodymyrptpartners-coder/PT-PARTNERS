    "path_way_block": {
      "realization": {
        "block_name": "path_way_block",
        "content": {
          "title": "Этапы оформления",
          "steps": [
            {
              "step": 1,
              "icon": "●",
              "label": "Обращение",
              "time": "около 15 мин"
            },
            {
              "step": 2,
              "icon": "▲",
              "label": "Проверка данных",
              "time": "до 1 дня"
            },
            {
              "step": 3,
              "icon": "■",
              "label": "Оформление",
              "time": "индивидуально (~10 дней)"
            },
            {
              "step": 4,
              "icon": "★",
              "label": "Результат",
              "time": "по завершении"
            }
          ],
          "details": [
            {
              "step": 1,
              "title": "Обращение и уточнение ситуации",
              "items": [
                "вы оставляете обращение удобным для вас способом",
                "во время общения описываете свою ситуацию и цель обращения",
                "получаете понимание, подходит ли консульский учет в вашем случае и что понадобится дальше"
              ]
            },
            {
              "step": 2,
              "title": "Проверка предоставленной информации",
              "items": [
                "вы передаете имеющиеся документы для ознакомления",
                "после проверки становится понятно, достаточно ли текущих документов",
                "при необходимости получаете список того, что нужно добавить или уточнить"
              ]
            },
            {
              "step": 3,
              "title": "Процесс оформления",
              "items": [
                "вы действуете по согласованному порядку шагов",
                "на каждом этапе понятно, что происходит и чего ждать дальше",
                "длительность зависит от индивидуальной ситуации и внешних факторов"
              ]
            },
            {
              "step": 4,
              "title": "Получение результата",
              "items": [
                "вы получаете подтверждение завершения консульского учета",
                "после этого процесс считается завершенным"
              ]
            }
          ]
        }
      }
    },
