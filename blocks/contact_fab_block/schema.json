{
  "$id": "contact_fab_block.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["block_name", "content"],
  "additionalProperties": false,

  "properties": {
    "block_name": {
      "type": "string",
      "const": "contact_fab_block"
    },

    "content": {
      "type": "object",
      "required": ["items"],
      "additionalProperties": false,

      "properties": {
        "items": {
          "type": "array",
          "minItems": 1,

          "items": {
            "type": "object",
            "required": ["href", "label"],
            "additionalProperties": false,

            "properties": {
              "href": {
                "type": "string",
                "minLength": 1
              },
              "label": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      }
    }
  }
}

