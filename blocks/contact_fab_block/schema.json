{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["block_name", "content"],
  "additionalProperties": false,

  "properties": {
    "block_name": {
      "const": "contact_fab_block"
    },
    "content": {
      "type": "object",
      "required": ["items"],
      "additionalProperties": false,

      "properties": {
        "items": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["href", "label", "icon"],
            "additionalProperties": false,
            "properties": {
              "href": {
                "type": "string",
                "minLength": 1
              },
              "label": {
                "type": "string",
                "minLength": 1
              },
              "icon": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      }
    }
  }
}

