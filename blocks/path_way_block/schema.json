{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["block_name", "content"],
  "properties": {
    "block_name": {
      "type": "string",
      "const": "path_way_block"
    },
    "content": {
      "type": "object",
      "required": ["title", "steps", "details"],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },
        "steps": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["step", "icon", "label", "time"],
            "properties": {
              "step": {
                "type": "integer",
                "minimum": 1
              },
              "icon": {
                "type": "string",
                "minLength": 1
              },
              "label": {
                "type": "string",
                "minLength": 1
              },
              "time": {
                "type": "string",
                "minLength": 1
              }
            },
            "additionalProperties": false
          }
        },
        "details": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["step", "title", "items"],
            "properties": {
              "step": {
                "type": "integer",
                "minimum": 1
              },
              "title": {
                "type": "string",
                "minLength": 1
              },
              "items": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}

