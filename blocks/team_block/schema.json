{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["block_name", "content"],
  "properties": {
    "block_name": {
      "type": "string",
      "const": "team_block"
    },
    "content": {
      "type": "object",
      "required": ["items"],
      "properties": {
        "items": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": [
              "name",
              "role",
              "text",
              "photo",
              "photo_alt"
            ],
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1
              },
              "role": {
                "type": "string",
                "minLength": 1
              },
              "text": {
                "type": "string",
                "minLength": 1
              },
              "photo": {
                "type": "string",
                "minLength": 1
              },
              "photo_alt": {
                "type": "string",
                "minLength": 1
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}

