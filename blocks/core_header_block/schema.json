{
  "$id": "core_header_block.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["block_name", "content"],
  "additionalProperties": false,

  "properties": {
    "block_name": {
      "type": "string",
      "const": "core_header_block"
    },

    "content": {
      "type": "object",
      "required": ["lang", "title"],
      "additionalProperties": false,

      "properties": {
        "lang": { "type": "string", "minLength": 2 },
        "title": { "type": "string", "minLength": 1 },
        "viewport": { "type": "string" },
        "description": { "type": "string" },

        "og": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "title": { "type": "string" },
            "description": { "type": "string" },
            "image": { "type": "string" },
            "url": { "type": "string" },
            "type": { "type": "string" },
            "locale": { "type": "string" }
          }
        },

        "twitter": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "card": { "type": "string" },
            "title": { "type": "string" },
            "description": { "type": "string" },
            "image": { "type": "string" }
          }
        },

        "stylesheets": {
          "type": "array",
          "items": { "type": "string" }
        },

        "icons": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "favicon": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["href"],
                "additionalProperties": false,
                "properties": {
                  "type": { "type": "string" },
                  "sizes": { "type": "string" },
                  "href": { "type": "string" }
                }
              }
            },
            "apple_touch": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["sizes", "href"],
                "additionalProperties": false,
                "properties": {
                  "sizes": { "type": "string" },
                  "href": { "type": "string" }
                }
              }
            }
          }
        }
      }
    }
  }
}

