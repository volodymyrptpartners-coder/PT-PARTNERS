{
  "$id": "site_top_panel.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["site_top_panel"],
  "additionalProperties": false,

  "properties": {
    "inline_block": {
  	"$ref": "inline_block.schema.json"
    },
    "site_top_panel": {
      "type": "object",
      "required": ["brand", "current", "languages"],
      "additionalProperties": false,

      "properties": {
        "brand": {
          "type": "string",
          "minLength": 1
        },

        "current": {
          "type": "string",
          "minLength": 2,
          "description": "Current language code (ISO 639-1, e.g. uk, ru, en)"
        },

        "languages": {
          "type": "array",
          "minItems": 1,

          "items": {
            "type": "object",
            "required": ["code", "href", "flag"],
            "additionalProperties": false,

            "properties": {
              "code": {
                "type": "string",
                "minLength": 2
              },

              "href": {
                "type": "string",
                "minLength": 1
              },

              "flag": {
                "type": "string",
                "minLength": 1,
                "description": "Flag icon filename"
              }
            }
          }
        }
      }
    }
  }
}

