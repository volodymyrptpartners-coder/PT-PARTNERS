{
  "$id": "hero2_block.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["block_name", "content"],
  "additionalProperties": false,

  "properties": {
    "block_name": {
      "type": "string",
      "const": "hero2_block"
    },

    "content": {
      "type": "object",
      "required": ["title", "items"],
      "additionalProperties": false,

      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },

        "items": {
          "type": "array",
          "minItems": 1,

          "items": {
            "type": "object",
            "required": ["icon", "text"],
            "additionalProperties": false,

            "properties": {
              "icon": {
                "type": "string",
                "minLength": 1,
                "description": "Unicode symbol, e.g. â˜…"
              },

              "text": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      }
    }
  }
}

