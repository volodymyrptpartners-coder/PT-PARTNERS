{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["block_name", "content"],
  "properties": {
    "block_name": {
      "type": "string",
      "const": "office_block"
    },
    "content": {
      "type": "object",
      "required": [
        "title",
        "address",
        "maps_url",
        "photos"
      ],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },
        "address": {
          "type": "string",
          "minLength": 1
        },
        "address_label": {
          "type": "string",
          "minLength": 1
        },
        "reception_note": {
          "type": "string"
        },
        "extra_note": {
          "type": "string"
        },
        "maps_url": {
          "type": "string",
          "format": "uri"
        },
        "maps_label": {
          "type": "string",
          "minLength": 1
        },
        "show_photo_label": {
          "type": "string",
          "minLength": 1
        },
        "photos": {
          "type": "array",
          "minItems": 1,
          "maxItems": 4,
          "items": {
            "type": "object",
            "required": ["src", "alt"],
            "properties": {
              "src": {
                "type": "string",
                "minLength": 1
              },
              "alt": {
                "type": "string",
                "minLength": 1
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}

