{
  "$id": "hero_consular_registration.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["block_name", "content"],
  "additionalProperties": false,

  "properties": {
    "block_name": {
      "type": "string",
      "const": "hero_block"
    },

    "content": {
      "type": "object",
      "required": ["title", "description", "features", "cta"],
      "additionalProperties": false,

      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },

        "description": {
          "type": "string",
          "minLength": 1
        },

        "features": {
          "type": "array",
          "minItems": 1,

          "items": {
            "type": "object",
            "required": ["icon", "text"],
            "additionalProperties": false,

            "properties": {
              "icon": {
                "type": "string",
                "minLength": 1,
                "description": "Unicode symbol, e.g. ✓ or ⏱"
              },

              "text": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        },

        "cta": {
          "type": "object",
          "required": ["text", "href"],
          "additionalProperties": false,

          "properties": {
            "text": {
              "type": "string",
              "minLength": 1
            },

            "href": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    }
  }
}

